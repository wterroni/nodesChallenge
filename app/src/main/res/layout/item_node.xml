<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="4dp"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/alias_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/item_node_alias"
            android:textStyle="bold"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/public_key_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/item_node_public_key"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/channels_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/item_node_channels" />

        <TextView
            android:id="@+id/capacity_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/item_node_capacity"/>

        <TextView
            android:id="@+id/first_seen_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/item_node_first_seen" />

        <TextView
            android:id="@+id/last_updated_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/item_node_last_updated" />

        <TextView
            android:id="@+id/location_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/item_node_location" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
